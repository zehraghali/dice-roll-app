pipeline {
    agent any
    tools {
        maven 'Maven3'
        jdk 'JDK11'
    }
    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/zehraghali/dice-roll-app.git'
            }
        }
        stage('Build') {
            steps {
                bat 'mvn clean package'
            }
        }
        stage('Run Unit Tests') {
            steps {
                bat 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'  // Tallenna testiraportit
                }
            }
        }
        stage('Code Coverage Report') {
            steps {
                bat 'mvn jacoco:report'
            }
            post {
                always {
                    jacoco execPattern: 'target/jacoco.exec'
                }
            }
        }
    }
}
